<div class="well">
  <h1>Listing candidates</h1>


    <table class="table">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Description</th>
          <th>CV</th>
        </tr>
      </thead>

      <tbody>
        <% @candidates.each do |c| %>
          <tr>
            <td><%= c.profile.first_name %></td>
            <td><%= c.profile.last_name %></td>
            <td><%= truncate(c.description, length: 100) %></td>
            <td><%= link_to "Download", c.cv.url %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


  <br>

  <%= link_to 'Back to job listings', admin_jobs_path, class: "btn btn-info" %>
</div>
