<%= form_for [:admin, @job] do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group well">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group well">
    <%= f.label :description %><br>
    <%= f.text_area :description,size: "60x10" , class: 'form-control'%>
  </div>
  <div class="form-group well">
    <%= f.label :company %><br>
    <%= f.text_field :company, class: 'form-control' %>
  </div>
  <div class="form-group well">
    <%= f.label :salary %><br>
    <%= f.text_field :salary, class: 'form-control'%>
  </div>
  <div class="form-group well">
    <%= f.label :kind, "Type" %><br>
    <%= f.text_field :kind, class: 'form-control', placeholder: "e.g part-time/full-time"%>
  </div>
  <div class="form-group well">
    <%= f.label :category %><br>
    <%= f.text_field :category, class: 'form-control', placeholder: "e.g IT sector"%>
  </div>
  <div class="form-group well">
    <%= f.label :contact %><br>
    <%= f.text_field :contact, class: 'form-control', placeholder: "e.g example@example.com"%>
  </div>

  <div class="actions text-center">
    <%= f.submit "Save", class:"btn btn-success" %>
  </div>
<% end %>
