<div class="well">
  <h4 class="job-application-heading">Applying for: <%= @job.title %></h4>
  <%= form_for [@job,@candidate] do |f| %>
    <% if @candidate.errors.any? %>
      <div class="alert alert-danger" id="error_explanation">
        <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this application</h2>

        <ul>
        <% @candidate.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.hidden_field :job_id %>

    <div class="form-group well">
        <%= f.label :description, "Description*" %>
         <%= f.text_area :description,size: "60x10", class: 'form-control' %>
    </div>

    <div class="form-group well">
        <%= f.label :cv, "CV*" %>
         <%= f.file_field :cv, class: 'form-control' %>
         <span>Only .pdf and .doc allowed</span>
    </div>


    <div class="actions text-center">
      <%= f.submit "Confirm application" , class:"btn btn-success" %>
    </div>
  <% end %>
</div>
